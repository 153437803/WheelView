<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#33666666"
        android:gravity="center"
        android:text="选中：0"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <lib.kalu.wheel.WheelView
        android:id="@+id/wheel1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="#33666666"
        app:wv_stock_color="@android:color/holo_green_light"
        app:wv_stock_size="1dp"
        app:wv_text_color_normal="@android:color/black"
        app:wv_text_color_select="@android:color/holo_red_dark"
        app:wv_text_count="5"
        app:wv_text_loop="false"
        app:wv_text_size="14sp" />

    <lib.kalu.wheel.WheelView
        android:id="@+id/wheel2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="#33666666"
        app:wv_stock_color="@android:color/holo_green_light"
        app:wv_stock_size="1dp"
        app:wv_text_color_normal="@android:color/black"
        app:wv_text_color_select="@android:color/holo_red_dark"
        app:wv_text_count="5"
        app:wv_text_loop="true"
        app:wv_text_size="14sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#33666666"
        android:gravity="center"
        android:text="选中：0"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</LinearLayout>
